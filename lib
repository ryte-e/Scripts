-- NetworkUI.lua
local NetworkUI = {}

-- Services
local TweenService = game:GetService("TweenService")
local UserInputService = game:GetService("UserInputService")
local RunService = game:GetService("RunService")
local Players = game:GetService("Players")
local CoreGui = game:GetService("CoreGui")

-- Create Window
function NetworkUI:CreateWindow(title)
    local Window = {}
    Window.Tabs = {}
    
    -- Ana GUI
    local ScreenGui = Instance.new("ScreenGui")
    ScreenGui.Name = "NetworkUI"
    ScreenGui.ResetOnSpawn = false
    ScreenGui.ZIndexBehavior = Enum.ZIndexBehavior.Sibling
    
    -- Parent belirleme
    if RunService:IsStudio() then
        ScreenGui.Parent = Players.LocalPlayer:WaitForChild("PlayerGui")
    else
        ScreenGui.Parent = CoreGui
    end
    
    -- Ana Frame
    local MainFrame = Instance.new("Frame")
    MainFrame.Name = "Main"
    MainFrame.BackgroundColor3 = Color3.fromRGB(15, 15, 20)
    MainFrame.BorderSizePixel = 0
    MainFrame.Position = UDim2.new(0.5, -275, 0.5, -200)
    MainFrame.Size = UDim2.new(0, 550, 0, 400)
    MainFrame.ClipsDescendants = true
    MainFrame.Parent = ScreenGui
    
    local MainCorner = Instance.new("UICorner")
    MainCorner.CornerRadius = UDim.new(0, 10)
    MainCorner.Parent = MainFrame
    
    -- Network Background Container (ClipsDescendants ile sınırla)
    local NetworkContainer = Instance.new("Frame")
    NetworkContainer.Name = "NetworkBG"
    NetworkContainer.BackgroundTransparency = 1
    NetworkContainer.Size = UDim2.new(1, 0, 1, 0)
    NetworkContainer.Position = UDim2.new(0, 0, 0, 0)
    NetworkContainer.ClipsDescendants = true
    NetworkContainer.Parent = MainFrame
    NetworkContainer.ZIndex = 1
    
    -- Network Nodes (Düğüm noktaları)
    local nodes = {}
    local connections = {}
    
    -- Node oluşturma
    for i = 1, 8 do
        local node = Instance.new("Frame")
        node.Name = "Node" .. i
        node.BackgroundColor3 = Color3.fromRGB(88, 101, 242)
        node.BorderSizePixel = 0
        node.Size = UDim2.new(0, 6, 0, 6)
        node.Position = UDim2.new(math.random(10, 90)/100, 0, math.random(10, 90)/100, 0)
        node.Parent = NetworkContainer
        node.ZIndex = 3
        
        local nodeCorner = Instance.new("UICorner")
        nodeCorner.CornerRadius = UDim.new(1, 0)
        nodeCorner.Parent = node
        
        -- Node verisi
        nodes[i] = {
            frame = node,
            posX = math.random(10, 90)/100,
            posY = math.random(10, 90)/100,
            velX = (math.random() - 0.5) * 0.002,
            velY = (math.random() - 0.5) * 0.002
        }
    end
    
    -- Bağlantı çizgileri oluştur
    local function createConnection(node1, node2)
        local line = Instance.new("Frame")
        line.Name = "Connection"
        line.BackgroundColor3 = Color3.fromRGB(88, 101, 242)
        line.BorderSizePixel = 0
        line.BackgroundTransparency = 0.7
        line.Parent = NetworkContainer
        line.ZIndex = 2
        
        return {
            frame = line,
            node1 = node1,
            node2 = node2
        }
    end
    
    -- Node'ları bağla
    table.insert(connections, createConnection(nodes[1], nodes[2]))
    table.insert(connections, createConnection(nodes[2], nodes[3]))
    table.insert(connections, createConnection(nodes[3], nodes[4]))
    table.insert(connections, createConnection(nodes[4], nodes[5]))
    table.insert(connections, createConnection(nodes[5], nodes[6]))
    table.insert(connections, createConnection(nodes[6], nodes[7]))
    table.insert(connections, createConnection(nodes[7], nodes[8]))
    table.insert(connections, createConnection(nodes[8], nodes[1]))
    table.insert(connections, createConnection(nodes[1], nodes[5]))
    table.insert(connections, createConnection(nodes[2], nodes[6]))
    table.insert(connections, createConnection(nodes[3], nodes[7]))
    table.insert(connections, createConnection(nodes[4], nodes[8]))
    
    -- Çizgi güncelleme fonksiyonu
    local function updateLine(connection)
        local node1 = connection.node1
        local node2 = connection.node2
        local line = connection.frame
        
        local x1 = node1.frame.Position.X.Scale
        local y1 = node1.frame.Position.Y.Scale
        local x2 = node2.frame.Position.X.Scale
        local y2 = node2.frame.Position.Y.Scale
        
        local distance = math.sqrt((x2-x1)^2 + (y2-y1)^2)
        local angle = math.atan2(y2-y1, x2-x1)
        
        line.Size = UDim2.new(distance, 0, 0, 1)
        line.Position = UDim2.new(x1, 0, y1, 0)
        line.Rotation = math.deg(angle)
    end
    
    -- Network animasyonu
    spawn(function()
        while MainFrame.Parent do
            for i, node in ipairs(nodes) do
                -- Hareket et
                node.posX = node.posX + node.velX
                node.posY = node.posY + node.velY
                
                -- Sınırlardan sekme
                if node.posX <= 0.05 or node.posX >= 0.95 then
                    node.velX = -node.velX
                end
                if node.posY <= 0.05 or node.posY >= 0.95 then
                    node.velY = -node.velY
                end
                
                -- Pozisyonu sınırla
                node.posX = math.clamp(node.posX, 0.05, 0.95)
                node.posY = math.clamp(node.posY, 0.05, 0.95)
                
                -- Frame'i güncelle
                node.frame.Position = UDim2.new(node.posX, -3, node.posY, -3)
            end
            
            -- Bağlantıları güncelle
            for _, connection in ipairs(connections) do
                updateLine(connection)
            end
            
            RunService.RenderStepped:Wait()
        end
    end)
    
    -- Tıklama efekti (Ripple)
    local function createRipple(x, y)
        local ripple = Instance.new("Frame")
        ripple.Name = "Ripple"
        ripple.BackgroundColor3 = Color3.fromRGB(88, 101, 242)
        ripple.BackgroundTransparency = 0.3
        ripple.BorderSizePixel = 0
        ripple.Position = UDim2.new(0, x, 0, y)
        ripple.Size = UDim2.new(0, 0, 0, 0)
        ripple.AnchorPoint = Vector2.new(0.5, 0.5)
        ripple.Parent = NetworkContainer
        ripple.ZIndex = 4
        
        local rippleCorner = Instance.new("UICorner")
        rippleCorner.CornerRadius = UDim.new(1, 0)
        rippleCorner.Parent = ripple
        
        -- Animasyon
        local tween = TweenService:Create(ripple, 
            TweenInfo.new(0.8, Enum.EasingStyle.Quad, Enum.EasingDirection.Out),
            {
                Size = UDim2.new(0, 150, 0, 150),
                BackgroundTransparency = 1
            }
        )
        
        tween:Play()
        tween.Completed:Connect(function()
            ripple:Destroy()
        end)
        
        -- Parçacık efekti
        for i = 1, 6 do
            local particle = Instance.new("Frame")
            particle.Name = "Particle"
            particle.BackgroundColor3 = Color3.fromRGB(88, 101, 242)
            particle.BorderSizePixel = 0
            particle.Size = UDim2.new(0, 4, 0, 4)
            particle.Position = UDim2.new(0, x, 0, y)
            particle.Parent = NetworkContainer
            particle.ZIndex = 4
            
            local particleCorner = Instance.new("UICorner")
            particleCorner.CornerRadius = UDim.new(1, 0)
            particleCorner.Parent = particle
            
            local angle = (i-1) * 60
            local distance = 100
            local targetX = x + math.cos(math.rad(angle)) * distance
            local targetY = y + math.sin(math.rad(angle)) * distance
            
            local particleTween = TweenService:Create(particle,
                TweenInfo.new(0.6, Enum.EasingStyle.Quad, Enum.EasingDirection.Out),
                {
                    Position = UDim2.new(0, targetX, 0, targetY),
                    Size = UDim2.new(0, 1, 0, 1),
                    BackgroundTransparency = 1
                }
            )
            
            particleTween:Play()
            particleTween.Completed:Connect(function()
                particle:Destroy()
            end)
        end
    end
    
    -- Tıklama eventi
    MainFrame.InputBegan:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseButton1 or 
           input.UserInputType == Enum.UserInputType.Touch then
            local mouse = Players.LocalPlayer:GetMouse()
            local relativeX = mouse.X - MainFrame.AbsolutePosition.X
            local relativeY = mouse.Y - MainFrame.AbsolutePosition.Y
            createRipple(relativeX, relativeY)
        end
    end)
    
    -- Title Bar
    local TitleBar = Instance.new("Frame")
    TitleBar.Name = "TitleBar"
    TitleBar.BackgroundColor3 = Color3.fromRGB(20, 20, 25)
    TitleBar.BorderSizePixel = 0
    TitleBar.Size = UDim2.new(1, 0, 0, 35)
    TitleBar.Parent = MainFrame
    TitleBar.ZIndex = 5
    
    local TitleLabel = Instance.new("TextLabel")
    TitleLabel.Name = "Title"
    TitleLabel.BackgroundTransparency = 1
    TitleLabel.Position = UDim2.new(0, 15, 0, 0)
    TitleLabel.Size = UDim2.new(1, -60, 1, 0)
    TitleLabel.Font = Enum.Font.Gotham
    TitleLabel.Text = title or "Network UI"
    TitleLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
    TitleLabel.TextSize = 16
    TitleLabel.TextXAlignment = Enum.TextXAlignment.Left
    TitleLabel.Parent = TitleBar
    TitleLabel.ZIndex = 6
    
    -- Close Button
    local CloseBtn = Instance.new("TextButton")
    CloseBtn.Name = "Close"
    CloseBtn.BackgroundColor3 = Color3.fromRGB(240, 71, 71)
    CloseBtn.BorderSizePixel = 0
    CloseBtn.Position = UDim2.new(1, -25, 0.5, -6)
    CloseBtn.Size = UDim2.new(0, 12, 0, 12)
    CloseBtn.Text = ""
    CloseBtn.Parent = TitleBar
    CloseBtn.ZIndex = 6
    
    local CloseCorner = Instance.new("UICorner")
    CloseCorner.CornerRadius = UDim.new(1, 0)
    CloseCorner.Parent = CloseBtn
    
    CloseBtn.MouseButton1Click:Connect(function()
        ScreenGui:Destroy()
    end)
    
    -- Tab Container
    local TabContainer = Instance.new("Frame")
    TabContainer.Name = "Tabs"
    TabContainer.BackgroundColor3 = Color3.fromRGB(18, 18, 23)
    TabContainer.BorderSizePixel = 0
    TabContainer.Position = UDim2.new(0, 0, 0, 35)
    TabContainer.Size = UDim2.new(0, 120, 1, -35)
    TabContainer.Parent = MainFrame
    TabContainer.ZIndex = 5
    
    local TabList = Instance.new("UIListLayout")
    TabList.SortOrder = Enum.SortOrder.LayoutOrder
    TabList.Padding = UDim.new(0, 5)
    TabList.Parent = TabContainer
    
    local TabPadding = Instance.new("UIPadding")
    TabPadding.PaddingTop = UDim.new(0, 10)
    TabPadding.PaddingLeft = UDim.new(0, 10)
    TabPadding.PaddingRight = UDim.new(0, 10)
    TabPadding.Parent = TabContainer
    
    -- Content Container
    local ContentContainer = Instance.new("Frame")
    ContentContainer.Name = "Content"
    ContentContainer.BackgroundTransparency = 1
    ContentContainer.Position = UDim2.new(0, 130, 0, 45)
    ContentContainer.Size = UDim2.new(1, -140, 1, -55)
    ContentContainer.Parent = MainFrame
    ContentContainer.ZIndex = 5
    
    -- Drag
    local dragging
    local dragInput
    local dragStart
    local startPos
    
    local function update(input)
        local delta = input.Position - dragStart
        MainFrame.Position = UDim2.new(startPos.X.Scale, startPos.X.Offset + delta.X, startPos.Y.Scale, startPos.Y.Offset + delta.Y)
    end
    
    TitleBar.InputBegan:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseButton1 then
            dragging = true
            dragStart = input.Position
            startPos = MainFrame.Position
            
            input.Changed:Connect(function()
                if input.UserInputState == Enum.UserInputState.End then
                    dragging = false
                end
            end)
        end
    end)
    
    TitleBar.InputChanged:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseMovement then
            dragInput = input
        end
    end)
    
    UserInputService.InputChanged:Connect(function(input)
        if input == dragInput and dragging then
            update(input)
        end
    end)
    
    -- Tab Creation
    function Window:CreateTab(name)
        local Tab = {}
        
        local TabBtn = Instance.new("TextButton")
        TabBtn.Name = name
        TabBtn.BackgroundColor3 = Color3.fromRGB(25, 25, 30)
        TabBtn.BorderSizePixel = 0
        TabBtn.Size = UDim2.new(1, 0, 0, 35)
        TabBtn.Font = Enum.Font.Gotham
        TabBtn.Text = name
        TabBtn.TextColor3 = Color3.fromRGB(150, 150, 150)
        TabBtn.TextSize = 14
        TabBtn.Parent = TabContainer
        TabBtn.ZIndex = 6
        
        local TabCorner = Instance.new("UICorner")
        TabCorner.CornerRadius = UDim.new(0, 6)
        TabCorner.Parent = TabBtn
        
        local TabContent = Instance.new("ScrollingFrame")
        TabContent.Name = name
        TabContent.BackgroundTransparency = 1
        TabContent.BorderSizePixel = 0
        TabContent.Size = UDim2.new(1, 0, 1, 0)
        TabContent.ScrollBarThickness = 3
        TabContent.ScrollBarImageColor3 = Color3.fromRGB(88, 101, 242)
        TabContent.Visible = false
        TabContent.Parent = ContentContainer
        TabContent.ZIndex = 5
        
        local ContentList = Instance.new("UIListLayout")
        ContentList.SortOrder = Enum.SortOrder.LayoutOrder
        ContentList.Padding = UDim.new(0, 8)
        ContentList.Parent = TabContent
        
        local ContentPadding = Instance.new("UIPadding")
        ContentPadding.PaddingAll = UDim.new(0, 10)
        ContentPadding.Parent = TabContent
        
        TabBtn.MouseButton1Click:Connect(function()
            for _, v in pairs(ContentContainer:GetChildren()) do
                v.Visible = false
            end
            for _, v in pairs(TabContainer:GetChildren()) do
                if v:IsA("TextButton") then
                    v.BackgroundColor3 = Color3.fromRGB(25, 25, 30)
                    v.TextColor3 = Color3.fromRGB(150, 150, 150)
                end
            end
            TabContent.Visible = true
            TabBtn.BackgroundColor3 = Color3.fromRGB(88, 101, 242)
            TabBtn.TextColor3 = Color3.fromRGB(255, 255, 255)
        end)
        
        -- İlk tab'ı aktif yap
        if #Window.Tabs == 0 then
            TabContent.Visible = true
            TabBtn.BackgroundColor3 = Color3.fromRGB(88, 101, 242)
            TabBtn.TextColor3 = Color3.fromRGB(255, 255, 255)
        end
        
        -- Tab Elements
        function Tab:CreateButton(text, callback)
            local Button = Instance.new("TextButton")
            Button.Name = text
            Button.BackgroundColor3 = Color3.fromRGB(30, 30, 35)
            Button.BorderSizePixel = 0
            Button.Size = UDim2.new(1, 0, 0, 35)
            Button.Font = Enum.Font.Gotham
            Button.Text = text
            Button.TextColor3 = Color3.fromRGB(255, 255, 255)
            Button.TextSize = 14
            Button.Parent = TabContent
            Button.ZIndex = 6
            
            local ButtonCorner = Instance.new("UICorner")
            ButtonCorner.CornerRadius = UDim.new(0, 6)
            ButtonCorner.Parent = Button
            
            Button.MouseButton1Click:Connect(function()
                if callback then
                    callback()
                end
            end)
            
            return Button
        end
        
        function Tab:CreateToggle(text, default, callback)
            local ToggleFrame = Instance.new("Frame")
            ToggleFrame.Name = text
            ToggleFrame.BackgroundColor3 = Color3.fromRGB(30, 30, 35)
            ToggleFrame.BorderSizePixel = 0
            ToggleFrame.Size = UDim2.new(1, 0, 0, 35)
            ToggleFrame.Parent = TabContent
            ToggleFrame.ZIndex = 6
            
            local ToggleCorner = Instance.new("UICorner")
            ToggleCorner.CornerRadius = UDim.new(0, 6)
            ToggleCorner.Parent = ToggleFrame
            
            local ToggleLabel = Instance.new("TextLabel")
            ToggleLabel.BackgroundTransparency = 1
            ToggleLabel.Position = UDim2.new(0, 10, 0, 0)
            ToggleLabel.Size = UDim2.new(1, -60, 1, 0)
            ToggleLabel.Font = Enum.Font.Gotham
            ToggleLabel.Text = text
            ToggleLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
            ToggleLabel.TextSize = 14
            ToggleLabel.TextXAlignment = Enum.TextXAlignment.Left
            ToggleLabel.Parent = ToggleFrame
            ToggleLabel.ZIndex = 7
            
            local ToggleBtn = Instance.new("TextButton")
            ToggleBtn.BackgroundColor3 = default and Color3.fromRGB(88, 101, 242) or Color3.fromRGB(50, 50, 55)
            ToggleBtn.BorderSizePixel = 0
            ToggleBtn.Position = UDim2.new(1, -50, 0.5, -10)
            ToggleBtn.Size = UDim2.new(0, 40, 0, 20)
            ToggleBtn.Text = ""
            ToggleBtn.Parent = ToggleFrame
            ToggleBtn.ZIndex = 7
            
            local ToggleBtnCorner = Instance.new("UICorner")
            ToggleBtnCorner.CornerRadius = UDim.new(1, 0)
            ToggleBtnCorner.Parent = ToggleBtn
            
            local ToggleCircle = Instance.new("Frame")
            ToggleCircle.BackgroundColor3 = Color3.fromRGB(255, 255, 255)
            ToggleCircle.BorderSizePixel = 0
            ToggleCircle.Position = default and UDim2.new(1, -18, 0.5, -8) or UDim2.new(0, 2, 0.5, -8)
            ToggleCircle.Size = UDim2.new(0, 16, 0, 16)
            ToggleCircle.Parent = ToggleBtn
            ToggleCircle.ZIndex = 8
            
            local CircleCorner = Instance.new("UICorner")
            CircleCorner.CornerRadius = UDim.new(1, 0)
            CircleCorner.Parent = ToggleCircle
            
            local toggled = default
            
            ToggleBtn.MouseButton1Click:Connect(function()
                toggled = not toggled
                
                TweenService:Create(ToggleBtn, TweenInfo.new(0.2), {
                    BackgroundColor3 = toggled and Color3.fromRGB(88, 101, 242) or Color3.fromRGB(50, 50, 55)
                }):Play()
                
                TweenService:Create(ToggleCircle, TweenInfo.new(0.2), {
                    Position = toggled and UDim2.new(1, -18, 0.5, -8) or UDim2.new(0, 2, 0.5, -8)
                }):Play()
                
                if callback then
                    callback(toggled)
                end
            end)
            
            return ToggleFrame
        end
        
        table.insert(Window.Tabs, Tab)
        return Tab
    end
    
    return Window
end

return NetworkUI
